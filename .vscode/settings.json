{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "astro", // Enable .astro
    "typescript", // Enable .ts
    "typescriptreact" // Enable .tsx
  ],
  "material-icon-theme.folders.customClones": [
    {
      "name": "users-admin",
      "base": "admin",
      "color": "light-green-500",
      "lightColor": "light-green-700",
      "folderNames": ["users"]
    },
    {
      "name": "roles-admin",
      "base": "admin",
      "color": "purple-400",
      "folderNames": ["roles"]
    },
    {
      "name": "features-modules",
      "base": "plugin",
      "color": "purple-400",
      "folderNames": ["feature", "features"]
    },
    {
      "name": "plate-ui",
      "base": "base",
      "color": "blue-700",
      "folderNames": ["plate-ui"]
    },
    {
      "name": "magic-ui",
      "base": "helper",
      "color": "yellow-900",
      "folderNames": ["magic-ui"]
    },
    {
      "name": "server-actions",
      "base": "functions",
      "color": "green-600",
      "folderNames": ["action", "actions"]
    },
  ],
  "material-icon-theme.files.customClones" : [
    {
      "name": "auth-config",
      "color": "yellow-700",
      "base": "lock",
      "fileExtensions": [".ts"],
      "fileNames": ["auth.config.ts"]
    },
    {
      "name": "depdencies-cruiser",
      "color": "silver",
      "base": "pipeline",
      "fileExtensions": [".cjs", ".mjs", ".ts"],
      "fileNames": [".dependency-cruiser.cjs"]
    }
  ]
}